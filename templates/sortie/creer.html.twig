{% extends 'base.html.twig' %}

{% block titre %} {{ parent()}} | Créer une sortie {% endblock %}

{% block body %}
    <div class="creer-container">
    <h2>Créer une sortie</h2>
    {{ form_start(sortieForm) }}

        <div class="row">
            <div class="col">
                {{ form_row(sortieForm.nom) }}
            </div>
            <div class="col">
                Campus : {{ app.user.campus.nom }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(sortieForm.dateHeureDebut) }}
            </div>
            <div class="col">
                {{ form_row(sortieForm.ville) }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(sortieForm.dateLimiteInscription) }}
            </div>
            <div class="col">
                <span>{{ form_row(sortieForm.lieu) }}</span>

            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(sortieForm.nbInscriptionsMax) }}
            </div>
            <div class="col">
                Rue :
                {% if sortie.lieu %}
                {{ sortie.lieu.rue }}
                    {% else %}

                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col">
                <span>{{ form_row(sortieForm.duree) }}</span>
                <span>minutes</span>
            </div>
            <div class="col">
                Code postal :
                {% if sortie.lieu %}
                {{ sortie.lieu.ville.codePostal }}
                {% else %}
                null
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(sortieForm.infosSortie) }}
            </div>
            <div class="col">
                Latitude :
                {% if sortie.lieu %}
                {{ sortie.lieu.latitude }}
                {% else %}
                null
                {% endif %}
                <br>
                Longitude :
                {% if sortie.lieu %}
                {{ sortie.lieu.longitude }}
                {% else %}
                null
                {% endif %}
            </div>
        </div>

    <div class="btn">
        <button>Enregistrer</button>
    </div>
    <div class="btn">
        <button>Publier la sortie</button>
    </div>
    <div class="btn">
        <button>Annuler</button>
    </div>

    {{ form_end(sortieForm) }}
        <span><a href="{{ path('lieu_creer') }}"><button id="btnAjoutLieu">+</button></a></span>
    </div>
{% endblock %}

