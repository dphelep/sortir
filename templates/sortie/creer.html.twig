{% extends 'base.html.twig' %}

{% block titre %} {{ parent()}} | Créer une sortie {% endblock %}

{% block body %}
    <div class="titreCreer">
        <h2>Créer une sortie</h2>
    </div>
    {{ form_start(sortieForm) }}

        <div class="sortie_gauche">
            <div>{{ form_row(sortieForm.nom) }}</div>
            <div>{{ form_row(sortieForm.dateHeureDebut) }}</div>
            <div>{{ form_row(sortieForm.dateLimiteInscription) }}</div>
            <div>{{ form_row(sortieForm.nbInscriptionsMax) }}</div>
            <div class="duree">{{ form_row(sortieForm.duree) }}</div><div class="duree">minutes</div>
            <div>{{ form_row(sortieForm.infosSortie) }}</div>
        </div>

        <div class="sortie_droite">
            <div>Campus : {{ app.user.campus.nom }}</div>
            <div>{{ form_row(sortieForm.ville) }}</div>
            <div>
                {{ form_row(sortieForm.lieu) }}
                <button id="btnAjoutLieu">+</button>
            </div>
            <div>
            <div class="col">
                {{ form_row(sortieForm.ville) }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(sortieForm.dateLimiteInscription) }}
            </div>
            <div class="col">
                <span>{{ form_row(sortieForm.lieu) }}</span>

            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(sortieForm.nbInscriptionsMax) }}
            </div>
            <div class="col">
                Rue :
                {% if sortie.lieu %}
                    {{ sortie.lieu.rue }}
                {% else %}
                {{ sortie.lieu.rue }}
                    {% else %}

                {% endif %}
            </div>
            <div>
                Code postal :
                {% if sortie.lieu %}
                    {{ sortie.lieu.ville.codePostal }}
                {% else %}
                {% endif %}
            </div>
            <div>
                Latitude :
                {% if sortie.lieu %}
                    {{ sortie.lieu.latitude }}
                {% else %}
                {% endif %}
                <br>
                Longitude :
                {% if sortie.lieu %}
                    {{ sortie.lieu.longitude }}
                {% else %}
                {% endif %}
            </div>
        </div>
        <br><br><br>

    <div class="btnContainer">
        <div class="btn">
            {{ form_row(sortieForm.btnEnregistrer) }}
        </div>
        <div class="btn">
            {{ form_row(sortieForm.btnPublier) }}
        </div>
        <div class="btn">
            <a href="{{ path('sortie_annuler') }}"><button id="btnAnnuler">Annuler</button></a>
        </div>
    </div>

    {{ form_end(sortieForm) }}
        <span><a href="{{ path('lieu_creer') }}"><button id="btnAjoutLieu">+</button></a></span>
    </div>
{% endblock %}

