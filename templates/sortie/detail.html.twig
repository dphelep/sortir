{% extends 'base.html.twig' %}

{% block titre %}

{% endblock %}

{% block body %}
    <div id="infos">
        <h4>Date du jour : {{ "now"|date('d/m/Y') }}</h4>
        {% if app.user%}
            <h4>Participant : {{ app.user.prenom }} {{ app.user.nom|upper }}</h4>
        {% endif %}
    </div>
    <div id="filtre">
        <h2>Détail de la sortie {{ sortie.nom  }}</h2>
    </div>
    <div class="sortie_gauche">
       <div> Nom de la sortie : {{ sortie.nom }}</div>
       <div> Date et heure de la sortie : {{ sortie.dateHeureDebut|date('d/m/Y H:i')}}</div>
       <div> Date limite d'inscription : {{ sortie.dateLimiteInscription|date('d/m/Y')  }}</div>
       <div> Nombre de place : {{ sortie.nbInscriptionsMax  }}</div>
       <div> Durée: {{ sortie.duree }} minutes</div>
       <div> Description et infos : {{ sortie.infosSortie }}</div>
    </div>

    <div class="sortie_droite">
        <div> Campus : {{ sortie.siteOrganisateur.nom }} </div>
        <div> Lieu : {{ sortie.lieu.nom }} </div>
        <div> Rue : {{ sortie.lieu.rue }} </div>
        <div> Code postal : {{ sortie.lieu.ville.nom  }}</div>
        <div> Latitude : {{ sortie.lieu.latitude }}</div>
        <div> Longitude : {{ sortie.lieu.longitude }}</div>
    </div>

    <div>
        <h3>Liste des participants inscrits :</h3>
    </div>

        <table id="liste_participants">
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in participants %}
                <tr>
                    <td>{{ participant.pseudo }}</td>
                    <td>{{ participant.nom }} {{ participant.prenom }}</td>

                </tr>

            {% endfor %}
            </tbody>
        </table>
{% endblock %}


