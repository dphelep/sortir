{% extends 'base.html.twig' %}

{% block titre %}
    {{ parent() }} | Accueil
{% endblock %}

{% block body %}
    <div id="infos">
        <h4>Date du jour : {{ "now"|date('d/m/Y') }}</h4>
        <h4>Participant : {{ app.user.prenom }} {{ app.user.nom|upper }}</h4>
    </div>

    <div id="filtre">
        <h2>Filtrer les sorties</h2>

    </div>

    <table id="liste">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>inscrits / places</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for sortie in sorties %}
                <tr>
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</td>
                    <td>{{ sortie.dateLimiteInscription|date('d/m/Y') }}</td>
                    <td>{{ sortie.participants.count }} / {{ sortie.nbInscriptionsMax }}</td>
                    <td>{{ sortie.etat.libelle }}</td>
                    <td></td>
                    <td>{{ sortie.organisateur.pseudo }}</td>
                    {# TODO : changer la route des liens Afficher, Modifier et Annuler #}
                    <td>
                        <a href="{{ path('sortie_liste', {'id' : sortie.id }) }}">Afficher</a> -
                        <a href="">S'inscrire</a> -
                        <a href="">Se désister</a> -
                        <a href="{{ path('sortie_liste', {'id' : sortie.id }) }}">Modifier</a> -
                        <a href="">Publier</a> -
                        <a href="{{ path('sortie_liste', {'id' : sortie.id }) }}">Annuler</a>
                    </td>
                </tr>

            {% endfor %}
        </tbody>
    </table>
    {# TODO : changer la route du lien #}
    <a href="{{ path('sortie_liste') }}"><button id="btnCreer">Créer une sortie</button></a>
{% endblock %}