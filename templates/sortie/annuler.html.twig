        {% if app.user%}
            <h4>Participant : {{ app.user.prenom }} {{ app.user.nom|upper }}</h4>
        {% endif %}
    </div>
    <section class="annuler">
    <div >
        <h2>Annuler une sortie</h2>
    </div>
    <div>
        {{ form_start(annulerForm) }}
